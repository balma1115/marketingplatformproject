# .env.production.example
# Production environment variables template
# Copy this file to .env.production and fill in actual values

NODE_ENV=production
PORT=3000

# Database (from AWS Secrets Manager)
DATABASE_URL=

# Security (from AWS Secrets Manager)
JWT_SECRET=

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=marketingplat-assets
SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/YOUR_ACCOUNT/ranking-tracking-queue

# API Keys (from AWS Secrets Manager)
GEMINI_API_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_ADS_API_KEY=
NAVER_ADS_SECRET_KEY=
NAVER_ADS_CUSTOMER_ID=

# Redis
REDIS_URL=redis://localhost:6379

# Security Settings
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000

# Crawler Settings
USE_REAL_CRAWLER=true
USE_MOCK_SCRAPER=false
ENABLE_SCHEDULER=true

# Logging
LOG_LEVEL=error
DEBUG_MODE=false
SHOW_ERROR_DETAILS=false
