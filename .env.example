# ================================
# MarketingPlat Environment Variables
# ================================
# IMPORTANT: 실제 값은 절대 커밋하지 마세요!
# 이 파일은 예시용입니다.

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/marketingplat_dev"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# External APIs (Get from provider dashboards)
GEMINI_API_KEY="your-gemini-api-key"
NAVER_CLIENT_ID="your-naver-client-id"
NAVER_CLIENT_SECRET="your-naver-client-secret"
NAVER_ADS_API_KEY="your-naver-ads-api-key"
NAVER_ADS_SECRET_KEY="your-naver-ads-secret-key"
NAVER_ADS_CUSTOMER_ID="your-customer-id"
FLUX_API_KEY="your-flux-api-key"
TOSS_SECRET_KEY="your-toss-secret-key"

# Redis (Optional)
REDIS_URL="redis://localhost:6379"

# Feature Flags
USE_REAL_CRAWLER="false"
USE_MOCK_SCRAPER="true"
ENABLE_SCHEDULER="false"

# Security
RATE_LIMIT_ENABLED="true"
MAX_LOGIN_ATTEMPTS="5"
LOGIN_LOCKOUT_DURATION="900000"

# Logging
LOG_LEVEL="info"
DEBUG_MODE="false"
SHOW_ERROR_DETAILS="false"
