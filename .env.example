# Example Environment Variables
# Copy this file to .env.local and fill in the values

# Database
# For development: SQLite
DATABASE_URL="file:./dev.db"
# For production: PostgreSQL on AWS RDS
# DATABASE_URL="postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/marketingplat?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Google Gemini API (required for AI content generation)
GEMINI_API_KEY="your-gemini-api-key"

# Naver API (required for blog and search features)
NAVER_CLIENT_ID="your-naver-client-id"
NAVER_CLIENT_SECRET="your-naver-client-secret"

# Instagram API (required for Instagram features)
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
INSTAGRAM_USER_ID="your-instagram-user-id"

# AWS (required for production)
AWS_REGION="ap-northeast-2"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"

# Email Service
EMAIL_FROM="noreply@yourdomain.com"
# For development: SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
# For production: AWS SES
AWS_SES_REGION="ap-northeast-2"

# Payment Gateway
PAYMENT_GATEWAY_KEY="your-payment-key"
PAYMENT_GATEWAY_SECRET="your-payment-secret"

# Environment
NODE_ENV="development"